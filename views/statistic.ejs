<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistik Tiket - AGLIS Ticketing System</title>
    <link rel="stylesheet" href="/css/statistic.css">
    <link rel="stylesheet" href="/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="control-sidebar-slide-open layout-fixed layout-navbar-fixed accent-info text-sm" style="height: auto;">
<div class="wrapper">
    <%- include('partials/header.ejs') %>
    <%- include('partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">
                <h1>Statistik Tiket</h1>
                <div class="row">
                    <!-- Bagian Kiri -->
                    <div class="col-md-6">
                        <!-- Ringkasan Statistik -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Ringkasan Statistik</h3>
                            </div>
                            <div class="card-body d-flex justify-content-around">
                                <div class="col-lg-4 col-4">
                                    <div class="small-box bg-warning">
                                        <div class="inner">
                                            <h3><%= totalTickets %></h3>
                                            <p>Total Tiket</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-ticket-alt"></i>
                                        </div>
                                        <a href="/list" class="small-box-footer">Lihat Detail <i class="fas fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-4">
                                    <div class="small-box bg-danger">
                                        <div class="inner">
                                            <h3><%= totalOpenTickets %></h3>
                                            <p>Tiket Terbuka</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-exclamation-circle"></i>
                                        </div>
                                        <a href="/list?status=Terbuka" class="small-box-footer">Lihat Detail <i class="fas fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-4">
                                    <div class="small-box bg-success">
                                        <div class="inner">
                                            <h3><%= totalClosedTickets %></h3>
                                            <p>Tiket Selesai</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <a href="/list?status=Selesai" class="small-box-footer">Lihat Detail <i class="fas fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- <div class="card-body">
                                <p>Total Tiket: <strong><%= totalTickets %></strong></p>
                                <p>Tiket Terbuka: <strong><%= totalOpenTickets %></strong></p>
                                <p>Tiket Selesai: <strong><%= totalClosedTickets %></strong></p>
                            </div> -->
                        </div>

                        <!-- Grafik Pie Statistik -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Grafik Pie Jumlah Tiket Berdasarkan Status</h3>
                            </div>
                            <div class="card-body">
                                <div class="chart-container">
                                    <canvas id="ticketPieChart" style="height: 400px; width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bagian Kanan -->
                    <div class="col-md-6">
                        <!-- Grafik Batang Statistik -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Grafik Bar Jumlah Tiket Berdasarkan Status</h3>
                            </div>
                            <div class="card-body">
                                <div class="chart-container">
                                    <canvas id="ticketChart" style="height: 400px; width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include('partials/footer.ejs') %>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="/js/adminlte.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Ambil data dari server
    const statistics = <%- JSON.stringify(statistics || []) %>; // Mengonversi data statistik ke format JSON

    // Siapkan data untuk grafik batang
    const labels = statistics.map(stat => stat.status || 'Tidak Diketahui'); // Menangani status yang tidak ada
    const dataCounts = statistics.map(stat => (typeof stat.count === 'number' ? stat.count : 0)); // Menangani jumlah yang tidak ada

    // Siapkan warna untuk setiap status
    const colors = [
        'rgba(75, 192, 192, 0.2)', // Warna untuk status pertama
        'rgba(255, 99, 132, 0.2)', // Warna untuk status kedua
        'rgba(255, 206, 86, 0.2)', // Warna untuk status ketiga
        'rgba(54, 162, 235, 0.2)', // Warna untuk status keempat
        'rgba(153, 102, 255, 0.2)'  // Warna untuk status kelima
    ];

    // Buat grafik batang
    const ctxBar = document.getElementById('ticketChart').getContext('2d');
    const ticketChart = new Chart(ctxBar, {
        type: 'bar', // Jenis grafik
        data: {
            labels: labels,
            datasets: [{
                label: 'Jumlah Tiket',
                data: dataCounts,
                backgroundColor: colors.slice(0, dataCounts.length), // Menggunakan warna yang sesuai
                borderColor: colors.slice(0, dataCounts.length).map(color => color.replace('0.2', '1')), // Warna border
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: {
                        boxWidth: 20,
                        padding: 15
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Buat grafik pie
    const ctxPie = document.getElementById('ticketPieChart').getContext('2d');
    const ticketPieChart = new Chart(ctxPie, {
        type: 'pie', // Jenis grafik pie
        data: {
            labels: labels,
            datasets: [{
                label: 'Jumlah Tiket',
                data: dataCounts,
                backgroundColor: colors.slice(0, dataCounts.length), // Menggunakan warna yang sesuai
                borderColor: colors.slice(0, dataCounts.length).map(color => color.replace('0.2', '1')), // Warna border
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Distribusi Tiket Berdasarkan Status'
                }
            }
        }
    });
</script>
</body>
</html> 